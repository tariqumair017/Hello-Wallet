<%-  include ('../partials/header'); -%>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add a New Wallet Here</h1>
        <br>
     <div style="text-align: center; color: red;">
        <span id="arr"></span>
     </div>

     <div style="width: 30%; margin: 25px auto;">
        <form onsubmit="return myFun();" action="/wallets" method="post">
            <div class="form-group">
                <input class="form-control" type="text" id="name-id" name="name" placeholder="Wallet name">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" id="price-id" name="price" placeholder="price" min="0.01" step="0.01">
            </div>     
            <div class="form-group">
                <input class="form-control" type="text" id="image-id" name="image" placeholder="image url">
            </div>   
            <div class="form-group">
                <input class="form-control" type="text" id="desc-id" name="description" placeholder="description">
            </div>       
            <div class="form-group">
                <!-- <button class="btn btn-lg btn-primary btn-block" id="buttonid" >Add</button> -->
                <input type="submit" id="sub-id" value="Add" class="btn btn-lg btn-primary btn-block">
            </div>           
        </form>
    <a href="/wallets">Go Back</a>
      </div>
    </div>
</div>


