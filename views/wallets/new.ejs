<script>
    function myFun()
        {
            var name = document.getElementById("name-id").value;
            var price = document.getElementById("price-id").value;
            var image = document.getElementById("image-id").value;
            var desc = document.getElementById("desc-id").value;

            if(name == "")
            {
                document.getElementById("arr").innerHTML="** Please fill Name";
                return false;
            }
            if(price == "")
            {
                document.getElementById("arr").innerHTML="** Please fill Price";
                return false;
            }
            if(image == "")
            {
                document.getElementById("arr").innerHTML="** Please put image Url";
                return false;
            }
            if(desc == "")
            {
                document.getElementById("arr").innerHTML="** Please fill description";
                return false;
            }
        }

  
</script>



