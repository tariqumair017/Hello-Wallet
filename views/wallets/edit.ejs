<%-  include ('../partials/header'); -%>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= fwallet.name %></h1>

     <div style="width: 30%; margin: 25px auto;">
        <form action="/wallets/<%= fwallet._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="data[name]" value="<%= fwallet.name %>" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="data[price]" value="<%= fwallet.price %>" min="0.01" step="0.01" required>
            </div>     
            <div class="form-group">
                <input class="form-control" type="text" name="data[img]" value="<%= fwallet.img %>" required>
            </div>   
            <div class="form-group">
                <input class="form-control" type="text" name="data[description]" value="<%= fwallet.description %>" required>
            </div>       
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Save Change</button>
            </div>           
        </form>
    <a href="/wallets/<%= fwallet._id %>">Go Back</a>
      </div>
    </div>
</div>



<%-  include ('../partials/footer');  -%>