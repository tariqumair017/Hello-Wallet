 <% layout('layouts/boilerPlate') %>

<div class="container w-50">
    <div class="row g-3">
      <h1>Edit <%= fwallet.name %></h1>  
        <form class="validation-form" novalidate action="/wallets/<%= fwallet._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group mb-2">
                <label for="nameID" class="form-label"><b>Wallet Name</b></label>
                <input class="form-control" id="nameID" type="text" name="data[name]" value="<%= fwallet.name %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="form-group mb-2">
                <label for="locationID" class="form-label"><b>Location</b></label>
                <input class="form-control" id="locationID" type="text" name="data[location]" value="<%= fwallet.location %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="form-group mb-2">
                <label for="priceID" class="form-label"><b>Price</b></label>
                <input class="form-control" id="priceID" type="text" name="data[price]" value="<%= fwallet.price %>" min="0.01" step="0.01" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>       
            <div class="form-group mb-2">
                <label for="descriptionID" class="form-label"><b>Description</b></label>
                <textarea class="form-control" id="descriptionID" name="data[description]" cols="21" rows="3" required><%= fwallet.description %></textarea> 
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>       
            <div class="form-group mb-2">
                <label for="" class="form-label"><b>Add More Images</b></label>
                <div class="input-group custom-file">
                    <input class="form-control" type="file" id="imageID" name="img" multiple> 
                    <label for="imageID" class="input-group-text">
                        <span class="custom-file-label"></span> 
                    </label> 
                </div> 
            </div> 
            <div class="form-group mb-2">
                <% fwallet.images.forEach((img, i) => { %>
                    <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%= img.filename %>">
                        <label for="image-<%=i%>">Delete?</label>
                    </div>
                <% }) %>
            </div> 
            <div class="form-group mb-3 mt-3">
                <button class="btn btn-success">Update</button>
                <a class="btn btn-danger" href="/wallets/<%= fwallet._id %>">Go Back</a>
            </div>           
        </form> 
    </div> 
</div>


 