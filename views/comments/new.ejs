 <% layout('layouts/boilerPlate') %>
<link rel="stylesheet" href="/stylesheets/stars.css">


<div class="container">
    <div class="row">
     <h3 style="text-align: center;">Comment to <%= find.name %></h3> 
     <div style="width: 30%; margin: 25px auto;">
        <form class="validation-form" novalidate action="/wallets/<%= find._id %>/comments" method="post"> 
            <div class="mb-0">
                <label class="form-label" for="rating">Rating</label>
                <fieldset class="starability-basic"> 
                    <input type="radio" id="no-rate" class="input-no-rate" name="comment[rating]" value="0" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="comment[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="comment[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="comment[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="comment[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="comment[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
            </div>   
            <div class="mb-2">
                <label class="form-label" for="text">Review Text</label>
                <textarea class="form-control" name="comment[text]" id="text" cols="30" rows="3" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-2">
                <button class="btn btn-sm btn-success">Post</button>
            </div>           
            <a class="btn btn-sm btn-danger" href="/wallets/<%= find._id %>">Back</a>
        </form>
      </div>
    </div>
</div>


 